<!DOCTYPE html>
<html>
  <%- include('./partials/head') %> 
  <body>
    <%- include('./partials/nav') %> 
    <%- include('./partials/header') %> 


    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <div class="ps-row ps-padding-64" id="about">
        <div class="ps-col m6 ps-padding-large ps-hide-small">
          <img
            src="/images/<%= about[0].imagen %> "
            class="ps-round ps-image ps-opacity-min"
            alt="SAbores que enamoran"
            width="600"
            height="750"
          />
        </div>

        <div class="ps-col m6 ps-padding-large">
          <h1 class="ps-center"><%= about[0].titulo %> </h1>
          <br />
          <p class="ps-large">
            <%= about[0].descripcion1A %> 
            <span class="ps-tag ps-light-grey"><%= about[0].palabraResaltada %> </span> <%= about[0].descripcion1B %>
          </p>
          <p class="ps-large ps-text-grey ps-hide-medium">
            <%= about[0].descripcion2 %>
          </p>
        </div>
      </div>

      <hr />
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuestro Menu</h1>
          <br />
          <% for( let i = 0; i < menu.length; i++ ) { %>
            <h4><%= menu[i].titulo %></h4>
            <p class="ps-text-grey">
              <%= menu[i].descripcion %> U$S <%=menu[i].precio/* .toFixed(2) */%>
            </p>
          <% } %>
          <br />
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>
      <%- include('./partials/footer') %> 

    </div>
  </body>
</html>
